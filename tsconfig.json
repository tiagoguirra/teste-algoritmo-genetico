{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": false,
      "sourceMap": true,
      "module": "commonjs",
      "target": "es6",      
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["dom","es2015","es2017","es2018"],
      "moduleResolution": "node",    
      "preserveConstEnums": true,
      "removeComments": true
    },
    "defaultSeverity": "error",
    "include": ["src/**/*.ts", "src/index.ts"],
    "exclude": [
      "node_modules",
      "node_modules/**",
      "**/*.spec.ts",
      "**/*.test.ts",
      "dist",
      ".vscode"
    ],
    "excludeTypes": ["types/node"]
  }
  